@model IEnumerable<TelescopeShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-3">
    <div class="row">
        <div class="col">
            <p>
                <a asp-action="Index" class="btn greyButtonColour text-light">Go back to customer view</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>
                <a asp-action="Create" class="btn blackButtonColour text-light">Create New Product Entry</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
        </div>
    </div>
    <div class="row">
        <div class="col">
        </div>
    </div>
    
    @foreach (var item in Model)
    {<div class="row">
        <div class="col">
            <p class="fw-bold mb-0">Name: </p>
            <p>
                @Html.DisplayFor(modelItem => item.Name)
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p class="fw-bold mb-0">Price:</p>
            <p>
                @Html.DisplayFor(modelItem => item.Price)
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p class="fw-bold mb-0">Description:</p>
            <p>
                @Html.DisplayFor(modelItem => item.Description)
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p class="fw-bold mb-0">Image Url:</p>
            <p>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </p>
        </div>
    </div>
        <div class="row">
            <p class="fw-bold mb-0">Image:</p>
            <div class="col d-flex">
                <img src="@item.ImageUrl'" class="maxHeight50vh" alt="Product image">
            </div>
        </div>
    <div class="row">
        <div class="col">
            <p class="fw-bold mb-0">Stock:</p>
            <p>
                @Html.DisplayFor(modelItem => item.Stock)
            </p>
        </div>
    </div>
    <div class="row border-bottom pb-5 mb-5">
        <div class="col">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn greyButtonColour text-light me-2 px-4">Edit</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-light">Delete</a>
        </div>
    </div>
    }
</div>
