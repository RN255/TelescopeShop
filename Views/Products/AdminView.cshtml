@model IEnumerable<TelescopeShop.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-3">
    <div class="row">
        <div class="col">
            <p>
                <a asp-action="Index" class="btn greyButtonColour text-light">Go back to customer view</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>
                <a asp-action="Create" class="btn blackButtonColour text-light">Create New Product Entry</a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col">
        </div>
    </div>
    <div class="row">
        <div class="col">
        </div>
    </div>
    
        
</div>


        @foreach (var item in Model)
        {<div class="row">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <p class="fw-bold mb-0">Name: </p>
                        <p>
                            @Html.DisplayFor(modelItem => item.Name)
                        </p>
                        <p class="fw-bold mb-0">Price: </p>
                        <p>
                            @Html.DisplayFor(modelItem => item.Price)
                        </p>
                        <p class="fw-bold mb-0">Description: </p>
                        <p>
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                        <p class="fw-bold mb-0">Image Url: </p>
                        <p>
                            @Html.DisplayFor(modelItem => item.ImageUrl)
                        </p>
                        <p class="fw-bold mb-0">Stock: </p>
                        <p>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </p>
                        <div class="border-bottom pb-5 mb-5 d-flex">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn greyButtonColour text-light me-2 px-4">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-light">Delete</a>
                         </div>
                    </div>
                </div>
            </div>
        </div>
        }
   

