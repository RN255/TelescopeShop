@model Basket

<div class="container mt-3">
    <div class="row">
        <div class="col">
            <h1>Order Successful</h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <p class="fs-3">Thank you for your order! You can view your order history from your account page.</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn blackButtonColour text-light mt-3" asp-controller="Orders" asp-action="Index">View Order History</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn greyButtonColour text-light mt-3" asp-controller="Products" asp-action="Index">Return to products list</a>
        </div>
    </div>
</div>



