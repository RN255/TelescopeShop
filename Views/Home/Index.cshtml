@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid">
    <div class="row mt-4">
        <div class="col text-center cosmosBackground">
            <h1 class="display-6 text-light mt-4">Explore the universe with Oracle Telescopes</h1>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col border px-0">
            <div id="carouselExampleIndicators" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="images/campfireTelescope.jpeg" class="d-block w-100 img-fluid" alt="...">
                        <div class="carousel-caption top-0 mt-4">
                            <h5 class="fw-light fs-2">Campfire Under the Stars</h5>
                            <p class="fw-light fs-4">Enjoy the night sky with a telescope</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images/familyTelescope.jpeg" class="d-block w-100" alt="...">
                        <div class="carousel-caption">
                            <h5 class="fw-light fs-2">Look for planets and stars</h5>
                            <p class="fw-light fs-4">When the sun goes down, the journey begins...</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="images/mountainTelescope.jpeg" class="d-block w-100" alt="...">
                        <div class="carousel-caption top-0 mt-4">
                            <h5 class="fw-light fs-2">Look into the cosmos</h5>
                            <p class="fw-light fs-4">Feel the connection to the universe</p>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card mx-1 h-100">
                    <img src="https://media.4rgos.it/i/Argos/5067718_R_Z001A?w=1500&h=880&qlt=70&fmt=webp" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Celestron 114AZ Newtonian Telescope</h5>
                        <p class="card-text">Celestron's ExploraScope 114AZ is the perfect telescope for the aspiring astronomer!</p>
                    <a class="nav-link text-light btn greyButtonColour mt-auto" asp-area="" asp-controller="Products" asp-action="ProductDetails" asp-route-id="1">Product Details</a>
                    </div>
                </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card mx-1 h-100">
                    <img src="https://media.4rgos.it/i/Argos/9408737_R_Z001A?w=1500&h=880&qlt=70&fmt=webp" class="card-img-top" alt="...">
                <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Celestron Travelscope 70 Telescope Kit</h5>
                        <p class="card-text">The travelscope 70 is a portable refractor telescope, suitable for terrestrial use and astronomical use. </p>
                    <a class="nav-link text-light btn greyButtonColour mt-auto" asp-area="" asp-controller="Products" asp-action="ProductDetails" asp-route-id="9">Product Details</a>
                    </div>
                </div>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card mx-1 h-100" >
                    <img src="https://media.4rgos.it/i/Argos/3202812_R_Z001A?w=1500&h=880&qlt=70&fmt=webp" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Celestron Royal Observatory Greenwich FirstScope</h5>
                        <p class="card-text">World-renowned optics manufacturer Celestron has partnered with Royal Observatory Greenwich to introduce the FirstScope telescope.</p>
                    <a class="nav-link text-light btn greyButtonColour mt-auto" asp-area="" asp-controller="Products" asp-action="ProductDetails" asp-route-id="3">Product Details</a>
                    </div>
                </div>
            </div>
    </div>
    <div class="row mt-4">
        <div class="col text-center intoTheCosmosBackground midBanner d-flex flex-column">
            <h2 class="display-6 text-light mt-2">Don't miss out</h2>
            <h3 class="fw-light fs-4 text-light">We have excellent prices on all our products</h3>
            <p class="fw-light fs-5 text-light mt-auto">All customers who sign up can buy our products. Please sign up today!</p>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col">
        </div>
    </div>



</div>




